<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= obj.username %></title>
    <link rel="stylesheet" href="../../../../css/ver.css" />
    <link res="stylesheet" href="../../../../../css/profile.css" />
    <script>
        function edit() {
            var owner = '<%= obj.owner %>';
            console.log(owner);
            //check if owner is true
            if (owner === 'true') {
                console.log('owner is true');
                //if owner is true, then show edit button
                document.getElementsByName("edit").style.display = "block";
            }
        }
        window.onload = edit;
    </script>
  </head>
